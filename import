#!/bin/bash

if [ "$1" = "vext" ]; then
    case "$2" in
        youtube)
            echo "üì¶ Descargando youtube_info.py desde GitHub..."
            mkdir -p ~/vext/youtube
            cd ~/vext/youtube

            wget -q https://raw.githubusercontent.com/WM-HTML/Panel-vext/refs/heads/main/youtube_info.py -O youtube_info.py && echo "‚úÖ Archivo descargado: youtube_info.py"

            echo ""
            echo "‚ñ∂Ô∏è Para ejecutar, usa: python3 youtube_info.py"
            ;;
        *)
            echo "‚ö†Ô∏è Comando desconocido: $2"
            ;;
    esac
else
    echo "‚ùå Uso correcto: import vext youtube"
fi
